@using Microsoft.AspNet.Identity

@if (User.IsInRole("Admin") || User.IsInRole("Owner"))
{
    if (User.IsInRole("Admin"))
    {
        <li><span class="label label-primary">Role: Admin</span></li>
    }
    else if (User.IsInRole("Owner"))
    {
        <li><span class="label label-primary">Role: Owner</span></li>
    }
    <li>@Html.ActionLink("EditProfile", "Edit", "Profile")</li>
    <li>@Html.ActionLink("EditEducations", "Index", "Education")</li>
    <li>@Html.ActionLink("EditEmployers", "Index", "Employer")</li>
    <li>@Html.ActionLink("SiteStats", "SessionStatsPage", "Home")</li>
    <li>@Html.ActionLink("FileUpload", "FileUpload", "Home")</li>
}
else if (User.IsInRole("User"))
{
    <li><span class="label label-primary">Role: User</span></li>
}
