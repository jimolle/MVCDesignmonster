                @Html.EditorFor(model => model.PublicPresentationText, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.PublicPresentationText, "", new { @class = "text-danger" })
            </div>
        </div>

